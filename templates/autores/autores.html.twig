{% extends 'base.html.twig' %}
{# autores.html.twig #}

{% block title %}Hello AutoresController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>

		This friendly message is coming from:
		<ul>
			<li>Your controller at
				<code>/var/www/html/symfony7/src/Controller/AutoresController.php</code>
			</li>
			<li>Your template at
				<code>/var/www/html/symfony7/templates/autores/index.html.twig</code>
			</li>
		</ul>
	</div>
	<section>
		<table class="table table-primary table-striped m-3 p-3">
			<tr>
				<th>Nif</th>
				<th>Nombre</th>
				<th>Edad</th>
				<th>Sueldo Hora</th>
			</tr>

			{% for autor in autores %}
			<tr>
				<td>{{autor.nif}}</td>
				<td>{{autor.nombre}}</td>
				<td>{{autor.edad}}</td>
				<td>{{autor.sueldoHora}}</td>
			</tr>
            {% endfor %}


		</table>
	</section>
{% endblock %}
